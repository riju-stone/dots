# yabai -m rule --add app="^MediaMate$" manage=off
# yabai -m rule --add app="^Dropover$" manage=off
# yabai -m rule --add app="^Warp$" manage=off

yabai -m rule --add app!="^(Alacritty|Cursor)$" manage=off
